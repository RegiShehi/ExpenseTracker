@model ExpenseTracker.Models.ViewModels.FilterExpenseViewModel
@{
    ViewData["Title"] = "Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Filter Expenses</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Filter" id="filterForm">
            <div class="form-group">
                <label for="fromDatepicker" class="control-label">From</label>
                <input name="From" class="form-control" type="text" id="fromDatepicker" />
            </div>
            <div class="form-group">
                <label for="toDatepicker" class="control-label">To</label>
                <input name="To" class="form-control" type="text" id="toDatepicker" />
            </div>
            <div class="form-group">
                <label for="categoryId" class="control-label">Category</label>
                <select name="CategoryId" class="form-control" id="categoryId" asp-items="@Model.CategoryList">
                    <option disabled selected>Please select a Category</option>
                </select>
            </div>
            <div class="form-group">
                <label for="clientId" class="control-label">Client</label>
                <select id="clientId" name="ClientId" class="form-control" asp-items="@Model.ClientList">
                    <option disabled selected>Please select a Client</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" id="submit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/filterexpenses.js"></script>
}
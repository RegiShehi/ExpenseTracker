@model ExpenseTracker.Models.ViewModels.FilterExpenseViewModel
@{
    ViewData["Title"] = "Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Filter Expenses</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Filter" id="filterForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FilterExpense.From" class="control-label"></label>
                <input asp-for="FilterExpense.From" class="form-control" type="text" id="fromDatepicker" />
                <span asp-validation-for="FilterExpense.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilterExpense.To" class="control-label"></label>
                <input asp-for="FilterExpense.To" class="form-control" type="text" id="toDatepicker" />
                <span asp-validation-for="FilterExpense.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilterExpense.CategoryId" class="control-label"></label>
                <select asp-for="FilterExpense.CategoryId" class="form-control" asp-items="@Model.CategoryList">
                    <option disabled selected>Please select a Category</option>
                </select>

                <span asp-validation-for="FilterExpense.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilterExpense.ClientId" class="control-label"></label>
                <select asp-for="FilterExpense.ClientId" class="form-control" asp-items="@Model.ClientList">
                    <option disabled selected>Please select a Client</option>
                </select>

                <span asp-validation-for="FilterExpense.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" id="submit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/filterexpenses.js"></script>
}